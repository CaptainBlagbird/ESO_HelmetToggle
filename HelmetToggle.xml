<GuiXml>
	<Controls>
		<TopLevelControl name="HelmetToggleUI" mouseEnabled="true" movable="true">
			<Dimensions x="170" y="24" />
			<Anchor point="CENTER" />

			<OnMoveStop>
				HelmetToggle.OnUIMoveStop()
			</OnMoveStop>
			<OnUpdate>
				HelmetToggle.OnUIUpdate()
			</OnUpdate>
			
			<Controls>
				<Label name="$(parent)Label" font="ZoFontGameLargeBoldShadow" color="C5C29E" wrapmode="ELLIPSIS" verticalAlignment="CENTER" text="Helmet:">
					<Anchor point="LEFT" offsetX="15"/>
				</Label>
				<Button name="$(parent)Button" inherits="ZO_DefaultButton" text="Toggle">
					<Anchor point="RIGHT" />
					<Dimensions x="100" y="24" />
					<OnClicked>
						HelmetToggle.OnButtonClicked()
					</OnClicked>
				</Button>
			</Controls>
		</TopLevelControl>
	</Controls>
</GuiXml>